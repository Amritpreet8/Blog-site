

<div class="form-group" >
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control" style="background-color: rgb(214, 211, 211);width:700px;">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" style="background-color: rgb(214, 211, 211);width:700px;"><%= article.description %></textarea>
  </div>
  <div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" style="background-color: rgb(214, 211, 211); width:700px;"><%= article.markdown %></textarea>
  </div>
  
  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>